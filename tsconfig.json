{
    "compilerOptions": {
        "target": "ES2020", // Or a more modern target
        "module": "ESNext", // Important for Rollup
        "lib": [
            "ES2020",
            "dom",
            "dom.iterable"
        ],
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/js",
    },
    "include": [
        "src/**/*",
        "src/types.d.ts",
        "vitest/globals"
    ]
}